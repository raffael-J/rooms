<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotelmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotelmanagement">
        <activity android:name=".SettingsActivity"
            android:parentActivityName=".MenuActivity"/>
        <activity android:name=".NewReservationActivity"
            android:parentActivityName=".ReservationListActivity" />
        <activity android:name=".ReservationDetailsActivity"
            android:parentActivityName=".ReservationListActivity" />
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReservationListActivity"
            android:parentActivityName=".MenuActivity" />
        <activity android:name=".RoomDetailsActivity"
            android:parentActivityName=".RoomListActivity"/>
        <activity android:name=".NewRoomActivity"
            android:parentActivityName=".RoomListActivity" />
        <activity android:name=".RoomListActivity"
            android:parentActivityName=".MenuActivity" />
    </application>

</manifest>